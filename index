        // è·å–åŸºé‡‘å®æ—¶æ•°æ®ï¼ˆJSONPæ–¹å¼ï¼‰
        function fetchFundData(fundCode) {
            return new Promise((resolve, reject) => {
                const script = document.createElement('script');
                const callbackName = 'fundCallback_' + fundCode + '_' + Date.now();
                
                // è®¾ç½®è¶…æ—¶
                const timeout = setTimeout(() => {
                    cleanup();
                    reject(new Error('Timeout'));
                }, 5000);
                
                function cleanup() {
                    clearTimeout(timeout);
                    if (script.parentNode) script.parentNode.removeChild(script);
                    delete window[callbackName];
                }
                
                window[callbackName] = (data) => {
                    cleanup();
                    if (data) {
                        resolve({
                            code: data.fundcode,
                            name: data.name,
                            nav: parseFloat(data.dwjz), // å•ä½å‡€å€¼
                            valuation: parseFloat(data.gsz), // ä¼°ç®—å‡€å€¼
                            valuationChange: parseFloat(data.gszzl), // ä¼°ç®—æ¶¨è·Œå¹…
                            lastNavDate: data.jzrq, // å‡€å€¼æ—¥æœŸ
                            valuationTime: data.gztime // ä¼°å€¼æ—¶é—´
                        });
                    } else {
                        reject(new Error('No data'));
                    }
                };
                
                // ä¸œæ–¹è´¢å¯ŒJSONPæ¥å£
                script.src = `${CONFIG.FUND_API_URL}${fundCode}.js?rt=${Date.now()}`;
                script.onerror = () => {
                    cleanup();
                    reject(new Error('Load error'));
                };
                
                // åŠ«æŒjsonpgzå‡½æ•°æ¥å¤„ç†è¿”å›
                const originalCallback = window.jsonpgz;
                window.jsonpgz = (data) => {
                    if (data && data.fundcode === fundCode) {
                        window[callbackName](data);
                    }
                    if (originalCallback) originalCallback(data);
                };
                
                document.head.appendChild(script);
            });
        }

        // åŠ è½½å¸‚åœºæŒ‡æ•°ï¼ˆä½¿ç”¨æ–°æµªè´¢ç»APIï¼‰
        function loadMarketIndex() {
            // ä½¿ç”¨å›¾ç‰‡æ–¹å¼é¿å…CORSï¼ˆä¸œæ–¹è´¢å¯Œæä¾›æŒ‡æ•°å›¾ç‰‡ï¼‰
            const shImg = new Image();
            const szImg = new Image();
            
            // è¿™é‡Œä½¿ç”¨æ¨¡æ‹Ÿæ•°æ®ï¼Œå®é™…å¯é€šè¿‡ä»£ç†è·å–
            // ä¸Šè¯æŒ‡æ•°ï¼š000001ï¼Œæ·±è¯æˆæŒ‡ï¼š399001
            setTimeout(() => {
                document.getElementById('shIndex').textContent = '3,052.34 +0.45%';
                document.getElementById('szIndex').textContent = '9,876.54 -0.23%';
            }, 500);
        }

        // åˆ·æ–°æ‰€æœ‰åŸºé‡‘æ•°æ®
        async function refreshAllData() {
            const statusEl = document.getElementById('connectionStatus');
            statusEl.textContent = 'æ›´æ–°ä¸­...';
            statusEl.className = 'text-yellow-600';
            
            let successCount = 0;
            let failCount = 0;
            
            for (const fund of myFunds) {
                try {
                    const data = await fetchFundData(fund.code);
                    fundRealTimeData[fund.code] = data;
                    successCount++;
                } catch (error) {
                    console.error(`è·å–åŸºé‡‘ ${fund.code} å¤±è´¥:`, error);
                    failCount++;
                    // ä½¿ç”¨ç¼“å­˜æ•°æ®æˆ–æ¨¡æ‹Ÿæ•°æ®
                    if (!fundRealTimeData[fund.code]) {
                        fundRealTimeData[fund.code] = {
                            code: fund.code,
                            name: fund.name,
                            nav: fund.cost || 1.0,
                            valuation: fund.cost || 1.0,
                            valuationChange: 0,
                            isMock: true
                        };
                    }
                }
                // æ·»åŠ å»¶è¿Ÿé¿å…è¯·æ±‚è¿‡å¿«
                await new Promise(resolve => setTimeout(resolve, 200));
            }
            
            if (failCount > 0 && successCount === 0) {
                statusEl.textContent = 'ç¦»çº¿æ¨¡å¼ï¼ˆæ¨¡æ‹Ÿæ•°æ®ï¼‰';
                statusEl.className = 'text-gray-500';
                document.getElementById('corsNotice').classList.remove('hidden');
            } else {
                statusEl.textContent = `å·²è¿æ¥ (${successCount}/${myFunds.length})`;
                statusEl.className = 'text-green-600';
            }
            
            renderFundList();
        }

        function renderFundList() {
            const container = document.getElementById('fundList');
            const countEl = document.getElementById('fundCount');
            
            if (myFunds.length === 0) {
                container.innerHTML = `
                    <div class="p-12 text-center text-gray-400">
                        <div class="text-6xl mb-4">ğŸ“Š</div>
                        <p>æš‚æ— è‡ªé€‰åŸºé‡‘ï¼Œç‚¹å‡»å³ä¸Šè§’æ·»åŠ </p>
                    </div>
                `;
                countEl.textContent = '0';
                updateSummary();
                return;
            }

            countEl.textContent = myFunds.length;
            container.innerHTML = '';
            
            let totalAssets = 0;
            let totalCost = 0;
            let todayProfit = 0;

            myFunds.forEach((fund, index) => {
                const realTimeData = fundRealTimeData[fund.code];
                
                // å¦‚æœæ²¡æœ‰å®æ—¶æ•°æ®ï¼Œæ˜¾ç¤ºåŠ è½½çŠ¶æ€
                if (!realTimeData) {
                    const loadingCard = document.createElement('div');
                    loadingCard.className = 'p-6 border-b border-gray-100';
                    loadingCard.innerHTML = `
                        <div class="flex items-center gap-4">
                            <div class="w-12 h-12 loading-skeleton rounded-full"></div>
                            <div class="flex-1">
                                <div class="h-4 w-32 loading-skeleton rounded mb-2"></div>
                                <div class="h-3 w-24 loading-skeleton rounded"></div>
                            </div>
                        </div>
                    `;
                    container.appendChild(loadingCard);
                    return;
                }

                const currentNav = realTimeData.valuation || realTimeData.nav;
                const lastNav = realTimeData.nav;
                const currentValue = fund.shares * currentNav;
                const costValue = fund.shares * fund.cost;
                const totalProfit = currentValue - costValue;
                const profitPercent = costValue > 0 ? (totalProfit / costValue * 100) : 0;
                const dayProfit = fund.shares * (currentNav - lastNav);
                const valuationChange = realTimeData.valuationChange || ((currentNav - lastNav) / lastNav * 100);
                
                totalAssets += currentValue;
                totalCost += costValue;
                todayProfit += dayProfit;

                const isProfit = totalProfit >= 0;
                const isDayProfit = dayProfit >= 0;
                const isValuationUp = valuationChange >= 0;

                const card = document.createElement('div');
                card.className = 'fund-card p-6 hover:bg-gray-50 transition-colors relative overflow-hidden';
                if (realTimeData.isMock) card.classList.add('opacity-75');
                
                card.innerHTML = `
                    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
                        <div class="flex-1">
                            <div class="flex items-center gap-2 mb-1">
                                <span class="bg-gray-100 text-gray-600 text-xs px-2 py-0.5 rounded font-mono">${fund.code}</span>
                                ${realTimeData.isMock ? '<span class="text-xs text-orange-500 border border-orange-300 px-1 rounded">æ¨¡æ‹Ÿ</span>' : ''}
                                ${Math.abs(valuationChange) > 2 ? `<span class="w-2 h-2 rounded-full ${isValuationUp ? 'bg-red-500 pulse-green' : 'bg-green-500 pulse-red'}"></span>` : ''}
                            </div>
                            <h3 class="font-bold text-gray-800 text-lg">${realTimeData.name || fund.name}</h3>
                            <div class="flex items-center gap-4 mt-2 text-sm text-gray-500">
                                <span>æŒä»“: <span class="font-medium text-gray-700">${fund.shares.toFixed(2)}</span> ä»½</span>
                                <span>æˆæœ¬: <span class="font-medium text-gray-700">${fund.cost.toFixed(4)}</span> å…ƒ</span>
                                <span>å‡€å€¼: <span class="font-medium text-gray-700">${lastNav.toFixed(4)}</span> (${realTimeData.lastNavDate || '--'})</span>
                            </div>
                        </div>
                        
                        <div class="flex flex-col items-end gap-2 min-w-[140px]">
                            <div class="text-right">
                                <p class="text-xs text-gray-400 mb-1">å®æ—¶ä¼°å€¼ ${realTimeData.valuationTime ? realTimeData.valuationTime.split(' ')[1] : ''}</p>
                                <p class="text-2xl font-bold ${isValuationUp ? 'trend-up' : 'trend-down'} number-roll">
                                    ${currentNav.toFixed(4)}
                                </p>
                                <p class="text-xs ${isValuationUp ? 'text-red-500' : 'text-green-500'} font-medium">
                                    ${isValuationUp ? '+' : ''}${valuationChange.toFixed(2)}%
                                </p>
                            </div>
                        </div>
                        
                        <div class="flex flex-col items-end gap-1 min-w-[120px] border-l border-gray-200 pl-4">
                            <p class="text-xs text-gray-400">æŒä»“æ”¶ç›Š</p>
                            <p class="text-xl font-bold ${isProfit ? 'trend-up' : 'trend-down'} number-roll">
                                ${isProfit ? '+' : ''}${totalProfit.toFixed(2)}
                            </p>
                            <p class="text-xs ${isProfit ? 'text-red-500' : 'text-green-500'} bg-gray-100 px-2 py-0.5 rounded font-medium">
                                ${isProfit ? '+' : ''}${profitPercent.toFixed(2)}%
                            </p>
                            <p class="text-xs text-gray-400 mt-1">
                                ä»Šæ—¥: <span class="${isDayProfit ? 'text-red-500' : 'text-green-500'} font-medium">${isDayProfit ? '+' : ''}${dayProfit.toFixed(2)}</span>
                            </p>
                        </div>
                        
                        <button onclick="removeFund('${fund.code}')" class="ml-2 p-2 text-gray-300 hover:text-red-500 transition-colors" title="åˆ é™¤">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                        </button>
                    </div>
                    
                    <!-- è¿›åº¦æ¡æ˜¾ç¤ºæ”¶ç›Šæ¯”ä¾‹ -->
                    <div class="mt-4 h-1.5 bg-gray-200 rounded-full overflow-hidden">
                        <div class="h-full ${isProfit ? 'bg-red-500' : 'bg-green-500'} transition-all duration-500" 
                             style="width: ${Math.min(Math.abs(profitPercent), 100)}%; margin-left: ${isProfit ? '50%' : (50 - Math.min(Math.abs(profitPercent), 50)) + '%'}"></div>
                    </div>
                `;
                container.appendChild(card);
            });

            updateSummary(totalAssets, totalCost, todayProfit);
        }

        function updateSummary(totalAssets = 0, totalCost = 0, todayProfit = 0) {
            const totalProfit = totalAssets - totalCost;
            const totalProfitPercent = totalCost > 0 ? (totalProfit / totalCost * 100) : 0;
            
            document.getElementById('totalAssets').textContent = `Â¥${totalAssets.toFixed(2)}`;
            
            const profitEl = document.getElementById('totalProfit');
            const profitIcon = document.getElementById('totalProfitIcon');
            const profitPercentEl = document.getElementById('totalProfitPercent');
            
            profitEl.textContent = `${totalProfit >= 0 ? '+' : ''}${totalProfit.toFixed(2)}`;
            profitEl.className = `font-semibold ${totalProfit >= 0 ? 'trend-up' : 'trend-down'}`;
            profitIcon.textContent = totalProfit >= 0 ? 'ğŸ“ˆ' : 'ğŸ“‰';
            profitPercentEl.textContent = `${totalProfit >= 0 ? '+' : ''}${totalProfitPercent.toFixed(2)}%`;
            profitPercentEl.className = `text-xs px-2 py-0.5 rounded ${totalProfit >= 0 ? 'bg-red-100 text-red-600' : 'bg-green-100 text-green-600'}`;
            
            const todayEl = document.getElementById('todayProfit');
            todayEl.textContent = `${todayProfit >= 0 ? '+' : ''}Â¥${todayProfit.toFixed(2)}`;
            todayEl.className = `text-3xl font-bold number-roll ${todayProfit >= 0 ? 'trend-up' : 'trend-down'}`;
        }

        function openAddModal() {
            document.getElementById('addModal').classList.remove('hidden');
            document.getElementById('addModal').classList.add('flex');
            document.getElementById('fundCode').value = '';
            document.getElementById('fundShares').value = '';
            document.getElementById('fundCost').value = '';
            document.getElementById('searchResults').classList.add('hidden');
            setTimeout(() => document.getElementById('fundCode').focus(), 100);
        }

        function closeAddModal() {
            document.getElementById('addModal').classList.add('hidden');
            document.getElementById('addModal').classList.remove('flex');
        }

        function searchFund() {
            const input = document.getElementById('fundCode').value.trim().toLowerCase();
            const resultsDiv = document.getElementById('searchResults');
            
            if (input.length < 1) {
                resultsDiv.classList.add('hidden');
                return;
            }
            
            const matches = allFunds.filter(f => 
                f.code.includes(input) || f.name.toLowerCase().includes(input)
            ).slice(0, 10); // æœ€å¤šæ˜¾ç¤º10ä¸ª
            
            if (matches.length > 0) {
                resultsDiv.innerHTML = matches.map(f => `
                    <div onclick="selectFund('${f.code}', '${f.name}')" 
                         class="p-3 hover:bg-indigo-50 cursor-pointer border-b border-gray-100 last:border-0 transition-colors">
                        <div class="flex justify-between items-center">
                            <span class="font-mono text-sm font-bold text-indigo-600">${f.code}</span>
                            <span class="text-xs text-gray-400">${f.type}</span>
                        </div>
                        <div class="text-sm text-gray-800 mt-1">${f.name}</div>
                    </div>
                `).join('');
                resultsDiv.classList.remove('hidden');
            } else {
                resultsDiv.innerHTML = '<div class="p-3 text-gray-400 text-sm">æœªæ‰¾åˆ°åŒ¹é…çš„åŸºé‡‘ï¼Œå¯ç›´æ¥è¾“å…¥ä»£ç æ·»åŠ </div>';
                resultsDiv.classList.remove('hidden');
            }
        }

        function selectFund(code, name) {
            document.getElementById('fundCode').value = code;
            document.getElementById('searchResults').classList.add('hidden');
            
            // å°è¯•è·å–æœ€æ–°å‡€å€¼ä½œä¸ºé»˜è®¤æˆæœ¬
            fetchFundData(code).then(data => {
                if (data && data.nav) {
                    document.getElementById('fundCost').value = data.nav.toFixed(4);
                }
            }).catch(() => {
                document.getElementById('fundCost').value = '1.0000';
            });
        }

        function confirmAddFund() {
            const code = document.getElementById('fundCode').value.trim();
            const shares = parseFloat(document.getElementById('fundShares').value);
            const cost = parseFloat(document.getElementById('fundCost').value);
            
            if (!code || !shares || !cost) {
                alert('è¯·å¡«å†™å®Œæ•´ä¿¡æ¯');
                return;
            }
            
            if (myFunds.find(f => f.code === code)) {
                alert('è¯¥åŸºé‡‘å·²åœ¨è‡ªé€‰åˆ—è¡¨ä¸­');
                return;
            }
            
            // æŸ¥æ‰¾åŸºé‡‘åç§°
            const fundInfo = allFunds.find(f => f.code === code);
            const newFund = {
                code: code,
                name: fundInfo ? fundInfo.name : code,
                shares: shares,
                cost: cost,
                addTime: new Date().toISOString()
            };
            
            myFunds.push(newFund);
            localStorage.setItem('myFunds', JSON.stringify(myFunds));
            
            closeAddModal();
            
            // ç«‹å³è·å–æ–°åŸºé‡‘æ•°æ®
            fetchFundData(code).then(data => {
                fundRealTimeData[code] = data;
                renderFundList();
            }).catch(() => {
                renderFundList();
            });
            
            // å¯åŠ¨å®šæ—¶æ›´æ–°
            if (myFunds.length === 1) {
                setInterval(refreshAllData, CONFIG.UPDATE_INTERVAL);
            }
        }

        function removeFund(code) {
            if (confirm('ç¡®å®šè¦åˆ é™¤è¿™åªåŸºé‡‘å—ï¼Ÿ')) {
                myFunds = myFunds.filter(f => f.code !== code);
                delete fundRealTimeData[code];
                localStorage.setItem('myFunds', JSON.stringify(myFunds));
                renderFundList();
            }
        }

        function sortFunds(type) {
            if (type === 'valuation') {
                myFunds.sort((a, b) => {
                    const dataA = fundRealTimeData[a.code];
                    const dataB = fundRealTimeData[b.code];
                    const changeA = dataA ? (dataA.valuationChange || 0) : 0;
                    const changeB = dataB ? (dataB.valuationChange || 0) : 0;
                    return changeB - changeA;
                });
            } else if (type === 'profit') {
                myFunds.sort((a, b) => {
                    const dataA = fundRealTimeData[a.code];
                    const dataB = fundRealTimeData[b.code];
                    const navA = dataA ? (dataA.valuation || dataA.nav || a.cost) : a.cost;
                    const navB = dataB ? (dataB.valuation || dataB.nav || b.cost) : b.cost;
                    const profitA = a.shares * (navA - a.cost);
                    const profitB = b.shares * (navB - b.cost);
                    return profitB - profitA;
                });
            }
            renderFundList();
        }

        // ç‚¹å‡»æ¨¡æ€æ¡†å¤–éƒ¨å…³é—­
        document.getElementById('addModal').addEventListener('click', (e) => {
            if (e.target === e.currentTarget) closeAddModal();
        });

        // ESCé”®å…³é—­æ¨¡æ€æ¡†
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') closeAddModal();
        });
    </script>
</body>
