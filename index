            // æ‰€æœ‰åŸºé‡‘åˆ—è¡¨API
            FUND_LIST_URL: 'https://fund.eastmoney.com/js/fundcode_search.js',
            // è‚¡ç¥¨è¡Œæƒ…APIï¼ˆæ–°æµªè´¢ç»ï¼‰
            STOCK_API_URL: 'https://hq.sinajs.cn/list=',
            // æ›´æ–°é—´éš”ï¼ˆæ¯«ç§’ï¼‰
            UPDATE_INTERVAL: 10000,
            // æ˜¯å¦ä½¿ç”¨ä»£ç†ï¼ˆè§£å†³CORSï¼‰
            USE_PROXY: false
        };

        // ç”¨æˆ·æŒæœ‰çš„åŸºé‡‘åˆ—è¡¨
        let myFunds = JSON.parse(localStorage.getItem('myFunds')) || [];
        // æ‰€æœ‰åŸºé‡‘åˆ—è¡¨ï¼ˆç”¨äºæœç´¢ï¼‰
        let allFunds = [];
        // å®æ—¶æ•°æ®ç¼“å­˜
        let fundRealTimeData = {};
        
        // åˆå§‹åŒ–
        document.addEventListener('DOMContentLoaded', () => {
            loadAllFunds();
            updateTime();
            setInterval(updateTime, 1000);
            
            // å°è¯•åŠ è½½æ•°æ®
            if (myFunds.length > 0) {
                refreshAllData();
                setInterval(refreshAllData, CONFIG.UPDATE_INTERVAL);
            } else {
                renderFundList();
            }
            
            // åŠ è½½å¸‚åœºæŒ‡æ•°
            loadMarketIndex();
            setInterval(loadMarketIndex, 10000);
        });

        function updateTime() {
            const now = new Date();
            document.getElementById('updateTime').textContent = 
                `æ›´æ–°äº ${now.getHours().toString().padStart(2, '0')}:${now.getMinutes().toString().padStart(2, '0')}:${now.getSeconds().toString().padStart(2, '0')}`;
        }

        // åŠ è½½æ‰€æœ‰åŸºé‡‘åˆ—è¡¨ï¼ˆç”¨äºæœç´¢ï¼‰
        async function loadAllFunds() {
            try {
                // ç”±äºCORSé™åˆ¶ï¼Œè¿™é‡Œä½¿ç”¨å†…ç½®çš„çƒ­é—¨åŸºé‡‘åˆ—è¡¨ä½œä¸ºå¤‡é€‰
                // å®é™…ä½¿ç”¨æ—¶å¯ä»¥é€šè¿‡ä»£ç†æœåŠ¡å™¨è·å–å®Œæ•´åˆ—è¡¨
                allFunds = [
